<section id="cta" class="cta">
    <div class="cta__wrapper">
        {% include 'elements/image.twig' with {img:layout.tlo, class:"cta__bg"} only %}
        <div class="wrapper">
            <div class="cta__top">
                <div class="cta__top--col cta__top--col1">
                    {% include 'elements/image.twig' with {img:layout.haslo_1.ikona} only %}
                    <h3 class="cta__top--title">{{layout.haslo_1.tytul}}</h3>
                    <div class="cta__top--desc">{{layout.haslo_1.opis}}</div>
                </div>
                <div class="cta__top--col cta__top--col2">
                    {% include 'elements/image.twig' with {img:layout.haslo_2.ikona} only %}
                    <h3 class="cta__top--title">{{layout.haslo_2.tytul}}</h3>
                    <div class="cta__top--desc">{{layout.haslo_2.opis}}</div>
                </div>
            </div>
            <div class="cta__bot">
                <div class="cta__bot--col cta__bot--col1">
                    <h3 class="cta__bot--title1">{{layout.box1.tytul}}</h3>
                    <a href="{{layout.box1.przycisk_link.url}}" class="cta__bot--btn1">{{layout.box1.przycisk_tekst}}</a>
                </div>
                <div class="cta__bot--col cta__bot--col2">
                    <h3 class="cta__bot--title2">{{layout.box2.tytul}}</h3>
                    <a href="{{layout.box2.przycisk_link.url}}" class="cta__bot--btn2">{{layout.box2.przycisk_tekst}}</a>
                </div>
            </div>
        </div>
    </div>
</section>